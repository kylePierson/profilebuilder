@model List<Capstone.Data.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
      
        <h2>Home</h2>
        <br/><br />
        <div class="col-sm-5 student">
              <h3>.NET</h3>
                @foreach (var item in (Model as List<Capstone.Data.Models.Student>))
                {
                    if (item.Class == ".NET")
                    {
                        <ul class="studentDisplay">
                            <li><img src="@string.Concat("/Content/images/", item.FirstName.ToLower(), item.LastName.ToLower(), ".jpg")" class="img-circle profileImage" /></li>
                            <li>@*<img src="@string.Concat("/App_Data/uploads/",item.FirstName.ToLower(), item.LastName.ToLower(), ".jpg")" class="img-circle profileImage" />*@</li>
                            <li>@item.FirstName  @item.LastName</li>
                           

                        </ul>
                    }

                }
            </div>
        <div class="col-sm-2 student">
         </div>
            <div class="col-sm-5 student">
                <h3>Java</h3>
                @foreach (var item in (Model as List<Capstone.Data.Models.Student>))
            {
                if (item.Class == "JAVA")
                {
                        <ul class="studentDisplay">
                            <li><img src="@string.Concat("/Content/images/", item.FirstName.ToLower(), item.LastName.ToLower(), ".jpg")" class="img-circle profileImage" /></li>
                            <li>@*<img src="@string.Concat("/App_Data/uploads/",item.FirstName.ToLower(), item.LastName.ToLower(), ".jpg")" class="img-circle profileImage" />*@</li>
                            <li>@item.FirstName  @item.LastName</li>


                        </ul>
                    }

                }
            </div>





        </div>
    </div>


