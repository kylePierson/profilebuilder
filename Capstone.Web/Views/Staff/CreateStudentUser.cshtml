@model Capstone.Data.Models.Student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">

           
        </div>
        <div class="col-md-4">
            <div class="well creatNewUserForm">
                <h2>Create a New Student Account</h2>
                @using (Html.BeginForm("CreateStudentUser", "Staff", FormMethod.Post))
                {
                    @*@Html.Hidden("currentUsername", Model.Username)*@
                    <label for="newUsername"> Username: </label>
                    <input type="text" name="newUsername" />

                    <label for="firstName">First Name: </label>
                    <input type="Text" name="firstName" />

                    <label for="lastName">Last Name: </label>
                    <input type="text" name="lastName" />

                    <label for="cohort">Cohort: </label>
                    <input type="Text" name="cohort" />

                    <label for="emailAddress">Email: </label>
                    <input type="Text" name="emailAddress" />
                    <br>

                    <input class="btn btn-primary" type="submit" value="Submit">
                }
            </div>
        </div>
        <div class="col-md-4">

        </div>
    </div>    

</div>


