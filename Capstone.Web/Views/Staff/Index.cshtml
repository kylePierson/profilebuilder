@model Capstone.Data.Models.Staff

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-8">
            <div class="well staffDiv tile">
                <h1 align="center">Hello @Model.FirstName ! </h1>
                <p align="center">
                    <img src="@string.Concat("/Content/images/",Model.FirstName.ToLower(), ".jpg")" class="img-circle profileImage" />
                </p>
                <br />
                <br />

                <div class="row">
                    <div class="col-md-3"></div>
                    <a href='@Url.Action("CreateStaffUser", "Staff", new { username = Model.Username })'><span class="sbtn @*btn-danger*@ col-md-6 addStaffButton" style="margin-top:20px">+ New Staff User</span></a>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2"> </div>
                    <a href="@Url.Action("CreateStudentUser", "Staff",new { username = Model.Username})"><span class="sbtn @*btn-success*@ col-md-3 addStudentButton">+ New Student User</span></a>
                    
                    <div class="col-md-2"></div>
                    <a href='@Url.Action("CreateEmployerUser", "Staff",new { username = Model.Username})'><span class="sbtn @*btn-info*@ col-md-3 addEmployerButton">+ New Employer User</span></a>                     
                    
                </div>
                @*<li><a href='@Url.Action("CreateStaffUser", "Staff", new { username = Model.Username})'> Add a new Staff</a></li>*@
                @*<li><a href="@Url.Action("CreateStudentUser", "Staff",new { username = Model.Username})">Add a new Student</a></li>

                    <li><a href='@Url.Action("CreateEmployerUser", "Staff",new { username = Model.Username})'> Add a new Employer</a></li>*@



            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>

   



</div>

