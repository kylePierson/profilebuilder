@model Capstone.Data.Models.Employer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="well tile">
                <h2 align="center">Search</h2>
                <p>
                    Use this search for a quick search amoung our students:
                    <br/><br/>
                </p>
                @Html.Action("SearchStudentsByLanguage", "Student")
            </div>

        </div>
        <div class="col-md-6">
            <div class="well tile">
                <h2 align="center">Welcome @Model.CompanyName! </h2>
                <br/>
                <h4>Programming languages you are interested in: </h4>
                <br/>
                <p>
                    You can add or remove any language you would like.
                </p>
                <table id="employerSkills">

                    @*for now assume there is only one interest*@
                    @foreach (var item in Model.Programming_language)
                    {
                        <tr>
                            <td>@item</td>
                            <td>@Html.ActionLink("Delete", "DeleteSkillInterested",  new { skill = item , username = Model.Username} )</td>
                        </tr>
                    }


                </table>
                <br />

                <div id="editDiv">

                    <script src="/Content/AddANewLanguage.js"></script>

                    <label for="AddLanguage"></label>
                    <input type="text" name="AddLanguage" id="newLanguageTextbox"/>
                    <button id="addskill" class="btn btn-primary" type="submit">Add</button>
                    <input id="hiddenusername" value="@Model.Username" type="hidden" />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="well tile">
                <h2>List of students:</h2>
                <br />
                <p>
                    List of students that are skilled in the languages you are interested in.
                </p>
                @Html.Action("NewsFeedByLanguage", "Student", new { username = Model.Username })

            </div>

        </div>
    </div>


</div>



